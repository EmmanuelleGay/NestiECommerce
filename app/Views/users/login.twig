{% extends "layout/base.twig" %}

{% block title %}
    Se connecter
{% endblock %}

{% block body %}


    <div class="container mt-3">
        {% if message == 'logout' %}
            <div class="row justify-content-center">
                <div class="col-xs-12 col-md-4 alert alert-success">Déconnexion réussie</div>
            </div>
        {% endif %}

        {% if message == 'failed' %}
            <div class="row justify-content-center">
                <div class="col-xs-12 col-md-4 alert alert-primary">Identifiant ou mot de passe incorrect</div>
            </div>
        {% endif %}

        <div class="row justify-content-center">
            <div class="col-xs-12 col-md-4">

                {{ form_open(base_url('connexion')) }}

                <div class="form-group">
                    <label for="login">Nom d'utilisateur</label>
                    <input type="text" class="form-control " id="login" aria-describedby="emailHelp" name="User[login]">
                </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" class="form-control" id="password" name="User[password]">
                    </div>
                    <div class="d-flex flex-column align-items-end">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="connectedChexbox" name="User[connectedChexbox]">
                            <label class="form-check-label" for="connectedChexbox">Rester connecté</label>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Se connecter</button>
                    </div>
                {{ validation.errors ? validation.errors.name }}
                {{ form_close }}

            </div>
        </div>

        <div class = "row justify-content-center mt-5 mb-5">
            <div class = "col-12 text-center">Je n'ai pas de compte utilisateur</div>
            <a href= {{base_url('inscription')}} class="btn btn-info mt-3 col-3" >S'inscrire</a>
        </div>


    </div>

{% endblock %}
