{% extends "layout/base.twig" %}
{% block title %}
    Le marché
{% endblock %}


{% block body %}


    <div class="container mt-3">

        <div class="row">
            <div class="col-sm-8 col-md-4">
                <input type="text" class="form-control search-bar" aria-label="searchbar" aria-describedby="searchbar" name="" placeholder="Article"></div>
                <i class="fas fa-search fa-2x"></i>
            </div>
            
            <div class="row mt-3">
                {% for a in articles %}
                    <div class=" col-md-3 col-xs-12 mb-3">
                        <div class="card">
                            {% if a.idImage is empty %}
                            <img class="card-img-top imageArticle" src="https://gay.needemand.com/realisations/NESTIAdministration/public/images/noImage.jpg" alt="{{ a.nameToDisplay }}">
                            {% else %}
                            <img class="card-img-top imageArticle" src="https://gay.needemand.com/realisations/NESTIAdministration/public/images/articles/{{ a.getImage(a.idImage).name }}.{{ a.getImage(a.idImage).fileExtension }}" alt="{{ a.nameToDisplay }}">
                            {% endif %}  
                            <div class="card-body">
                                    <p class="card-title text-center">{{ a.nameToDisplay }}</p>
                                    <p class="card-text text-center articlePrice">{{ a.getPrice(a.idArticle).price }} €</p>
                                    <div class="row justify-content-between">
                                        <input type="number" class="col-md-3 col-xs-8 pr-0" placeholder="1">
                                        <a href="#" class="col-md-8 col-xs-12 btn btn-primary">Ajouter au panier</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>


    {% endblock %}
